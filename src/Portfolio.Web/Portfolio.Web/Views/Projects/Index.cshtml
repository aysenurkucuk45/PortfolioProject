@{
    ViewData["Title"] = "Projects";
}
<h1 class="mb-4">Projects</h1>

<div class="row row-cols-1 row-cols-md-3 g-4">
    <!-- BugTracker -->
    <div class="col">
        <div class="card h-100 shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-2">BugTrackerWithLayout</h5>
                <div class="mb-2">
                    <span class="badge bg-primary">ASP.NET MVC</span>
